extends layout

block content 
    h1= title 
    p
      a(href='/inventory/brands/add') Add new brand

    ul 
        each brand in brand_list 
            li 
                a(href=brand.url) #{brand.name}
                div=brand.products

        else 
            li There is no brand yet, add it by 
            a(href="/brands/add") clicking here